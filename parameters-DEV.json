{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentParameters.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {

    "keyVaultNm": {
      "value": "jpdc-global-dev-kv"
    },

    "keyVaultRg": {
      "value": "jpdc-storage-westus-rg"
    },

    "settings": {
      "value": {
        "stage": "DEV",
        "location": "westus",
        "locationAbbrv": "",

        "prepCommon": "/dev/prepCommon.json",

        "adminUsername": "jpdc-admin",

        "imageVHDUri": "https://jpdcprivgrsstadevwestus.blob.core.windows.net/images/baseline-osDisk-299898935.vhd",
                

        "vmSizes": {
          "appGateway": "Standard_Small",
		  "devvmsize" : "Standard_DS2_v2"
        },

        "defaultStorageType":"Premium_LRS",

        "nodeCount": {
          "appGatewayCapacity": 2,
		  "devvm" : 2
        },

        "apiVersions": {
          "compute": "2017-03-30",
          "deploy": "2015-01-01",
          "extension": "2015-06-15",
          "network": "2017-06-01",
          "serviceBus": "2017-04-01"
        },

        "quote": "'",

        "adCommand": {
          "cmd": "/opt/daa/bootstrap/bootstrap.sh ",
          "user": "--ad-user {userFromKeyStore} ",
          "pwd": "--ad-password '{pwdFromKeyStore}' ",
          "fqdb": "--ad-fqdn DAA.LOCAL ",
          "group": "--ad-admin-group jpdc-admins ",
          "groupDn": "--group-dn OU={stage},OU=servers,OU=jpdc,OU=projects ",
          "allowDn": "--allowed-dn CN=jpdc-users,OU=jpdc,OU=projects "
        },
        "customData": {
          "omsKeyVault": "jpdc-shared-dev-kv",
          "appIdkeyVault": "jpdc-automation-dev-kv",
          "appId": "automate-deploy-client-id",
          "appIdSecret": "automate-deploy-client-secret",
          "appIdObject": "automate-deploy-object-id",

          "value": "keyvault={OmsKeyVault}|applicationId={AppId}|servicePrincipal={AppIdObject}|tenantId=6362b077-fb81-4d5b-adf3-129cdb1b56cf|secret={AppIdSecret}"
        },

        "network": {
          "devVnetRg": "jpdc-services-westus-rg",
          "devVnet": "jpdc-services-vnet",
          "devSubnet": "jpdc-application-subnet",
          "devNodeIps": ["10.44.6.25", "10.44.6.26"],
          "devGatewayIp": "10.44.6.37",
          "devGatewayVnet": "jpdc-services-vnet",
          "devGatewaySubnet": "jpdc-appgateway-subnet",
          "devNodeSubnet": "jpdc-application-subnet"
        },

        "vmDisks": [
          {"Nm": "cassandra", "Sz": "750"},
          {"Nm": "cassandra", "Sz": "750"},
          {"Nm": "cassandra", "Sz": "750"}
        
        ]

